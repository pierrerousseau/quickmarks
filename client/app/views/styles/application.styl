// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here
@import '_states'
@import '_layout'
@import '_responsive'

main-color   = #bbb
danger-color = #d9534f
new-back     = #4863a0
new-color    = #a18648
delete-back  = #a75d59
delete-color = #59f2f7
tag-color    = #a18648

body.application, input, textarea
    color: main-color;
    padding: 0;
    background: none repeat scroll 0 0 rgba(40,40,40,0.8);

#content
    padding: 1em
    input, textarea
        border: #1f1f1f
        color: #eee
    .row
        margin: 0 .5em
    .form-control
        background: #262626
    .panel
        border: #1f1f1f
        background: main-color
    .panel-heading
        background: #1f1f1f
        border: #1f1f1f
        color: main-color
        .panel-title
            font-weight: bold
            font-size: 2em
            padding: .5em
    .panel-body
        background: #1f1f1f
        color: main-color
    button
        margin: 0 .5em
        padding: 0
        vertical-align: middle
        &:hover
            opacity: 0.8

    span.import
    span.export
        position: absolute
        top: 1.5em
        button
            background: transparent
            color: #373
            border: 0
            padding: 0
            margin: 0
            font-size: 1.25em
        .import-failed
            padding: -1
            margin: 0
        .imported
            padding: 0
            margin: 0
    span.import
        right: 1.5em
    span.export
        right: 3em

#create-bookmark-form
    textarea
        height: 5em
    .full-form
        display: none
    button.create
        font-size: 3em
        background: transparent
        color: #5cb85c
        border: none
        margin-left: 0
        margin-right: 1em
    button.clean
        background: transparent
        color: danger-color
        border: none

#bookmarks-file
    display: none


#bookmarks-list
    ul
        list-style: none
    li
        border-top: 1px solid #333
        padding: .5em 0;
    .tools
        .form-group
            width: 20em
            display: inline-block
        button.sort
            color: #428bca
            background: transparent
            border: none
    .bookmark
        &.new
            background-color: new-back
            color: new-color
            :visited
                color: new-color
        &:hover
            background-color: #333
            .delete
                visibility: visible
        &.to-delete
            background-color: delete-back
            color: delete-color
            :visited
                color: delete-color
        .delete
            background: transparent
            color: danger-color
            border: none
            visibility: hidden
            margin: 0
            padding: 0.1em
            div
                vertical-align: initial
        div
            display: inline-block
            margin: 0 0 0 .5em
            vertical-align: top

        .title
            max-width: 60%
            white-space: normal
            &.full
                max-width: none
        .all
            width: 95%
            white-space: nowrap
        .url
            opacity: 0.5
            max-width: 35%
            overflow: hidden
            text-overflow: ellipsis
            &:hover
            &.full
                color: #eee
                white-space: normal
                max-width: none
        .description
            .tags
                margin-left: 0
                margin-bottom: .5em
                width: 100%
                opacity: .6
            display: block
            margin: .5em 4em
            color: #eee
            border-radius: 4px
            background: #262626
            padding: .5em
            opacity: 0.5
 
#tags-cloud
    margin-left: 5em
    height: auto
    text-align: center
    span 
        padding: .1em
        cursor: pointer
        &:hover
            color: tag-color
